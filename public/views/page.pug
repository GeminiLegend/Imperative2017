//- page.pug
html
  head
    title Imperative Design | A Full Stop Web Shop
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="theme-color", content="#0036bf")
    link(rel="manifest", href="/manifest.json")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")

    block scripts
        script(src='/js/global.js')

    block styles
        link(rel="stylesheet", href="/styles/css/styles.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
    body.page(class=active_page)
        div.container
            header
                .wrapper
                    a(href="/").logo
                        h1
                            != '<span>Imperative</span> Design'
                            span.tagline Elevate your messaging
                    a.nav-toggle(href="#")
                        i.fa.fa-bars
                    include nav.pug
        section.ctas
            .cta
                block main-cta
        .page.wrapper 
            section.content
                block page_content
        //- Load Facebook SDK for JavaScript
        div#fb-root
        script.
            window.fbAsyncInit = function() {
                FB.init({
                    xfbml            : true,
                    version          : "v4.0"
                });
            };

            (function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) return;
                js = d.createElement(s); js.id = id;
                js.src = 'https://connect.facebook.net/en_US/sdk/xfbml.customerchat.js';
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));

        //Your customer chat code
        div.fb-customerchat(attribution="setup_tool", page_id="163143773718123", theme_color="#0036bf", logged_in_greeting="Hey thanks for getting in touch. What can we do for you?", logged_out_greeting="Hey thanks for getting in touch. What can we do for you?")
             
    block bodyscripts