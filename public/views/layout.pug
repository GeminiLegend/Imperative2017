//- layout.pug
html
  head
    title Imperative Design | A Full Stop Web Shop
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="theme-color", content="#0036bf")
    link(rel="manifest", href="/manifest.json")
    block scripts

    block styles
        link(rel="stylesheet", href="/styles/css/styles.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
        link(rel="stylesheet", href="/scripts/slick-carousel/slick/slick.css")
        link(rel="stylesheet", href="/scripts/slick-carousel/slick/slick-theme.css")
    body.page(class=active_page)
        div.container
            div.infoBar 
                div.phone
                p 954-555-5555 
                div.email
                p imperativedesign@gmail.com
                div.twitter
                div.facebook
                div.instagram
            header.group
                .wrapper
                    a(href="//imperativedesign.net").logo
                        h1
                            != '<span>Imperative</span> Design'
                            span.tagline Elevate your messaging
                    a.nav-toggle(href="#")
                        i.fa.fa-bars
                    include nav.pug      
            block content

            block bodyscripts
                script(src='./scripts/rxjs/bundles/Rx.js')
                script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js")
                script(src="/scripts/slick-carousel/slick/slick.min.js")
                script(src='/js/global.js')

